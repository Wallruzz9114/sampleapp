<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages' %>

  <div class="row">
    <div class="col-md-3">
      <%= f.label :name %>
    </div>
    <div class="col-md-9">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <%= f.label :email %>
    </div>
    <div class="col-md-9">
      <%= f.email_field :email, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <%= f.label :password %>
    </div>
    <div class="col-md-9">
      <%= f.password_field :password, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <%= f.label :password_confirmation, "Password Confirmation" %>
    </div>
    <div class="col-md-9">
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-9">
      <%= f.submit "Save changes", class: "btn btn-lg btn-warning" %>
    </div>
  </div>
<% end %>
